<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="UseCompoundDrawables">
    <ImageView
        android:contentDescription="TODO"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginRight="4dp"
        app:srcCompat="@drawable/ic_person" />
    <TextView
        android:id="@+id/txt_username_contact_fragment"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:text="userName"/>

    <LinearLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="visible"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_video_call_contact_fragment"
            android:contentDescription="TODO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            app:tint="@color/lightGreen"
            app:srcCompat="@drawable/ic_video_call" />
        <ImageView
            android:id="@+id/ic_voice_call_contact_fragment"
            android:contentDescription="TODO"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="4dp"
            app:srcCompat="@drawable/ic_voice_call"
            app:tint="@color/lightGreen" />
    </LinearLayout>




</LinearLayout>